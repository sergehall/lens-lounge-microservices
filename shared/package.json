{
  "name": "@lens-lounge/shared",
  "version": "0.1.0",
  "description": "Shared utilities, DTOs, and domain models reused across microservices.",
  "private": true,
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "packageManager": "yarn@4.9.2",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": "20.11.1"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "node --import tsx $(yarn bin eslint) src --ext .ts",
    "lint:fix": "node --import tsx $(yarn bin eslint) src --ext .ts --fix"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/microservices": "*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^20.11.24",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.34.0"
  }
}
