{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Output directory for compiled files
    "outDir": "./dist",

    // Emit declaration files for consumers
    "declaration": true,
    "declarationMap": true,

    // Generate source maps and clean output
    "sourceMap": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test", "dist", "**/*.spec.ts"]
}
